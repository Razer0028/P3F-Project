[Interface]
Address = {{ item.address }}
PrivateKey = {{ item.private_key }}
{% if item.listen_port is defined %}ListenPort = {{ item.listen_port }}{% endif %}
{% if item.dns is defined %}DNS = {{ item.dns }}{% endif %}

{% for peer in item.peers %}
[Peer]
PublicKey = {{ peer.public_key }}
{% if peer.preshared_key is defined %}PresharedKey = {{ peer.preshared_key }}{% endif %}
AllowedIPs = {{ peer.allowed_ips }}
{% if peer.endpoint is defined %}Endpoint = {{ peer.endpoint }}{% endif %}
{% if peer.persistent_keepalive is defined %}PersistentKeepalive = {{ peer.persistent_keepalive }}{% endif %}

{% endfor %}
